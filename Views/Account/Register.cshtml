@{
    ViewData["Title"] = "Register";
}

<div class="loginPage container my-5 p-5">
    <div class="row mx-auto">
        <div class="col-4 mx-auto px-5 register">
            <h3 class="fs-3">Register</h3>
            <form class="d-flex flex-column mt-3" action="" method="POST" >
                <label class="mt-3" for="name">Name</label>
                <input class="form-control mx-auto focus-ring shadow-none" type="text" name="name" id="name" required value="" />
                <label class="mt-3" for="email">E-mail</label>
                <input class="form-control mx-auto focus-ring shadow-none" type="email" name="email" id="email" required value="" />
                <label class="mt-3" for="password">Password</label>
                <input class="form-control mx-auto focus-ring shadow-none " type="password" name="password" id="password" required />
                <label class="mt-3" for="password_confirmation">Confirm password</label>
                <input class="form-control mx-auto focus-ring shadow-none" type="password" name="password_confirmation" id="password_confirmation" required />
                <input type="submit" class="btn btn-outline-dark mt-3" value="Register">
            </form>
        </div>
    </div>
</div>