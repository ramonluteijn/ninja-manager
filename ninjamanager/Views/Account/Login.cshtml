@{
    ViewData["Title"] = "Login";
}

<div class="loginPage container my-5 p-5">
    <div class="row mx-auto">
        <div class="col-4 px-5 login mx-auto">
            <h3 class="fs-3">Login</h3>
            <form method="POST" asp-controller="Account" asp-action="Login" class="d-flex flex-column mt-3">
                <label class="mt-3" for="email">E-mail</label>
                <input class="form-control mx-auto focus-ring shadow-none" type="email" name="email" id="email" required />
                <label class="mt-3" for="password">Password</label>
                <input class="form-control mx-auto focus-ring shadow-none" type="password" name="password" id="password" required />
                <a asp-area="" asp-controller="Account" asp-action="Register" class="underline">Register here</a>
                <input type="submit" class="btn btn-outline-dark mt-3" value="Login">
            </form>
        </div>
    </div>
</div>